<!DOCTYPE html>
<html lang="en" ng-app="MyanmarFlood">
<% include partials/head %>
<body class="online-donation" data-page="donate">
  <div class="mdl-layout mdl-js-layout">
  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <% include partials/topbar %>
    <% include partials/drawer %>
    <main class="mdl-layout__content" id="main-container">
      <section class="section--center mdl-grid" id="main-content">

        <div class="mdl-title-box mdl-cell--12-col">
          <h3 class="page-title">Online Donations</h3>
        </div>

        <div id="online-donations" class="mdl-grid" ng-controller="CampaignsCtrl">

          <div class="mdl-card mdl-cell mdl-cell--6-col mdl-cell--12-col-tablet mdl-shadow--2dp" 
              ng-repeat="camp in campaigns">

            <div class="mdl-card__title mdl-card--expand has-img" 
              style="background: url('{{ camp.img }}') center / cover;" ng-if="camp.img">
              <h2 class="mdl-card__title-text">{{ camp.title }}</h2>
            </div>
            <div class="mdl-card__title" ng-if="!camp.img">
              <h2 class="mdl-card__title-text">{{ camp.title }}</h2>
            </div>
            <div class="mdl-card__supporting-text mdl-card--expand">
              {{ camp.desc }}
            </div>
            <div class="mdl-card__actions mdl-card--border">
              <a href="{{ camp.link }}" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" target="_blank">
                Donate
              </a>
            </div>
          </div>

        </div> <!-- end of div#online-donations -->

      </section> <!-- end of section#main-content -->
    </main>
  </div> <!-- end of div.mdl-layout -->
  <% include partials/scripts %>
</body>
</html>